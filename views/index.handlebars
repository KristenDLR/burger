<div class="container">

  {{>header}}
</div>

{{>top-block}}


<div class="row">
  <div class="col-md-4 col-sm-2"></div>
  <div class="col-md-6 col sm-8">
    <form>
      <div class="form-group addburger">
        <label for="addBurger">What type of Burger do you want?</label>
        <input type="addBurger" class="form-control" id="burgerNew" aria-describedby="burgerpost" placeholder="What kind of Burger would you like?">
        <small id="addEat" class="form-text text-muted">Add and Eat</small>
      </div>

      <button type="submit" class="addBurger btn btn-primary">ADD BURGER!</button>

  </div>
  </form>
</div>



<div class="container data">
  <div class="row">

    <div class="col-md-6">
      <h2>Burgers to devour!</h2>
      <div class="panel-body">
        <ul>
          {{#each burger}}
          {{#unless devoured}}
          <span><strong>{{this.id}} - {{this.burger_name}}</strong></span>
          <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}" data-newDevoured={{devour}}><span
              class="fa fa-usd"></span></button>
        </ul>
      </div>

      <div id="burgersAdded">
        <ul>
          {{!-- burger --}}

          {{!-- {{> burger/burger-block devoured=true}} --}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>


    {{!-- <div class="row"> --}}
      <div class="col-md-6" id="beenDevoured">
        <h2>Burgers that have been devoured</h2>

        <ul>
          {{#each burger}}
          {{#if devoured}}
          <ul>
            <li> {{burger_name}}</li>
          </ul>
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
